#export CDPATH=".:/src:/$HOME" TODO: fuzzy finder?
export CDPATH="."
export HOMEBREW_PREFIX="$HOME/brew"
PATH="/usr/local/opt/man-db/bin:$PATH"   # favour GNU man
PATH="/opt/homebrew/bin:$PATH"           # favour homebrew binaries
PATH="$HOME/.local/bin:$PATH"            # favour local binaries, if there
PATH="$HOMEBREW_PREFIX:$PATH"            # favour user-installed brew, if there
export PATH

export HOMEBREW_CELLAR="$HOMEBREW_PREFIX/Cellar"
export HOMEBREW_CASK_OPTS="--appdir=$HOMEBREW_PREFIX/Caskroom"
